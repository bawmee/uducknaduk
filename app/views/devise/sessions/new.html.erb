<style>
  body{
    background-color:#fafafb;
  }
  .cenbox{
   position: absolute;
   width: 500px;
   height: 500px;
   left: 50%;
   top: 50%;
   margin-left: -250px;
   margin-top: -250px;
   border: 1px #d9d9d9 solid;
   background: white;
   text-align: center;
   font-family: 'Nanum Gothic Coding', monospace;
   padding:110px 10px 110px 10px;
  }

  .inbox {
    background-color:#fafafb;
    border: 1px #d9d9d9 solid;
    width:230px;
    padding:10px;
    margin:10px;
  }
  
  .incen {
    position: absolute;
    width: 500px;
    height: 500px;
    left: 50%;
    top: 50%;
    margin-left: -250px;
    margin-top: -250px;
  }
  
  .my_btn {
    border: 1px #B0C4DE solid;
    border-radius:10px;
    background-color:#B0C4DE;
    padding:10px;
    width:230px;
    margin:10px;
    color:white;
    font-weight:bold;
  }

</style>
<h1><img src="/assets/move.gif" width="50px" height="auto">어덕나덕<img src="/assets/move.gif" width="50px" height="auto"></h1>
<div class="cenbox">

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

  <div class="field">
    <%= f.email_field :email, autofocus: true, autocomplete: "email" ,class: "inbox",placeholder: "이메일주소"%>
  </div>


  <div class="field">
    <%= f.password_field :password, autocomplete: "off" ,class: "inbox",placeholder: "비밀번호"%>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label "자동로그인" %>
    </div>
  <% end -%>

  <div class="actions">
    <%= f.submit "로그인", class:"my_btn" %>
  </div>
<% end %>
<br>
<%= render "devise/shared/links" %>
</div>
